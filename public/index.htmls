<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Block Blast Solver</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: #fff;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }
        
        .subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .app-container {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            justify-content: center;
        }
        
        .upload-section, .solution-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 25px;
            flex: 1;
            min-width: 300px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        }
        
        .section-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.3);
            padding-bottom: 10px;
        }
        
        .upload-area {
            border: 2px dashed rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            padding: 40px 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }
        
        .upload-area:hover {
            border-color: rgba(255, 255, 255, 0.8);
            background: rgba(255, 255, 255, 0.05);
        }
        
        .upload-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }
        
        .upload-text {
            margin-bottom: 15px;
        }
        
        .btn {
            background: #ff6b6b;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 50px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            display: inline-block;
        }
        
        .btn:hover {
            background: #ff5252;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
        }
        
        .btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .preview-container {
            margin-top: 20px;
            text-align: center;
        }
        
        .preview-title {
            margin-bottom: 10px;
        }
        
        .preview-image {
            max-width: 100%;
            max-height: 300px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }
        
        .steps-container {
            margin-top: 30px;
        }
        
        .step {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }
        
        .step.active {
            background: rgba(255, 255, 255, 0.2);
            border-left: 5px solid #ff6b6b;
        }
        
        .step-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .step-number {
            background: #ff6b6b;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-weight: bold;
        }
        
        .step-title {
            font-size: 1.2rem;
            font-weight: 600;
        }
        
        .step-content {
            padding-left: 45px;
        }
        
        .step-image {
            max-width: 100%;
            border-radius: 8px;
            margin-top: 10px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        }
        
        .solution-image {
            max-width: 100%;
            border-radius: 10px;
            margin-top: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }
        
        .loading {
            text-align: center;
            padding: 20px;
        }
        
        .spinner {
            border: 5px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top: 5px solid #ff6b6b;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .hidden {
            display: none;
        }
        
        .error-message {
            background: rgba(255, 0, 0, 0.2);
            border: 1px solid rgba(255, 0, 0, 0.5);
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
            text-align: center;
        }
        
        footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            font-size: 0.9rem;
            opacity: 0.7;
        }
        
        @media (max-width: 768px) {
            .app-container {
                flex-direction: column;
            }
            
            h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Block Blast Solver</h1>
            <p class="subtitle">Unggah gambar level Block Blast Anda dan dapatkan solusi dalam 3 langkah</p>
        </header>
        
        <div class="app-container">
            <div class="upload-section">
                <h2 class="section-title">Unggah Gambar</h2>
                
                <div class="upload-area" id="uploadArea">
                    <div class="upload-icon">üìÅ</div>
                    <p class="upload-text">Klik untuk memilih gambar atau seret dan lepas di sini</p>
                    <p class="file-types">Format yang didukung: JPG, PNG, GIF</p>
                </div>
                
                <input type="file" id="fileInput" accept="image/*" class="hidden">
                
                <div class="preview-container hidden" id="previewContainer">
                    <h3 class="preview-title">Pratinjau Gambar</h3>
                    <img id="previewImage" class="preview-image" src="" alt="Pratinjau gambar">
                </div>
                
                <button id="solveBtn" class="btn" disabled>Selesaikan Level</button>
            </div>
            
            <div class="solution-section">
                <h2 class="section-title">Solusi</h2>
                
                <div class="loading hidden" id="loading">
                    <div class="spinner"></div>
                    <p>Menganalisis gambar dan mencari solusi terbaik...</p>
                </div>
                
                <div class="steps-container" id="stepsContainer">
                    <div class="step">
                        <div class="step-header">
                            <div class="step-number">1</div>
                            <div class="step-title">Analisis Gambar</div>
                        </div>
                        <div class="step-content">
                            <p>Unggah gambar level Block Blast untuk memulai analisis.</p>
                        </div>
                    </div>
                    
                    <div class="step">
                        <div class="step-header">
                            <div class="step-number">2</div>
                            <div class="step-title">Identifikasi Pola</div>
                        </div>
                        <div class="step-content">
                            <p>Bot akan menganalisis pola blok dan mencari kombinasi terbaik.</p>
                        </div>
                    </div>
                    
                    <div class="step">
                        <div class="step-header">
                            <div class="step-number">3</div>
                            <div class="step-title">Solusi Langkah demi Langkah</div>
                        </div>
                        <div class="step-content">
                            <p>Dapatkan panduan langkah demi langkah untuk menyelesaikan level.</p>
                        </div>
                    </div>
                </div>
                
                <div id="solutionResult" class="hidden">
                    <h3>Solusi Berhasil Ditemukan!</h3>
                    <p>Ikuti langkah-langkah berikut untuk menyelesaikan level:</p>
                    
                    <div id="step1" class="step active">
                        <div class="step-header">
                            <div class="step-number">1</div>
                            <div class="step-title">Langkah Pertama</div>
                        </div>
                        <div class="step-content">
                            <p id="step1Desc">Pilih dan hancurkan blok di posisi yang ditandai dengan warna merah.</p>
                            <img id="step1Image" src="" alt="Langkah 1" class="step-image">
                        </div>
                    </div>
                    
                    <div id="step2" class="step">
                        <div class="step-header">
                            <div class="step-number">2</div>
                            <div class="step-title">Langkah Kedua</div>
                        </div>
                        <div class="step-content">
                            <p id="step2Desc">Setelah blok pertama hancur, fokus pada kelompok blok di area biru.</p>
                            <img id="step2Image" src="" alt="Langkah 2" class="step-image">
                        </div>
                    </div>
                    
                    <div id="step3" class="step">
                        <div class="step-header">
                            <div class="step-number">3</div>
                            <div class="step-title">Langkah Terakhir</div>
                        </div>
                        <div class="step-content">
                            <p id="step3Desc">Bersihkan sisa blok dengan memilih kelompok yang tepat.</p>
                            <img id="step3Image" src="" alt="Langkah 3" class="step-image">
                        </div>
                    </div>
                </div>

                <div id="errorContainer" class="hidden">
                    <div class="error-message">
                        <h3>Terjadi Kesalahan</h3>
                        <p id="errorMessage">Gagal memproses gambar. Silakan coba lagi.</p>
                    </div>
                </div>
            </div>
        </div>
        
        <footer>
            <p>Block Blast Solver &copy; 2023 - Solusi cepat untuk level Block Blast Anda</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileInput');
            const uploadArea = document.getElementById('uploadArea');
            const previewContainer = document.getElementById('previewContainer');
            const previewImage = document.getElementById('previewImage');
            const solveBtn = document.getElementById('solveBtn');
            const loading = document.getElementById('loading');
            const stepsContainer = document.getElementById('stepsContainer');
            const solutionResult = document.getElementById('solutionResult');
            const errorContainer = document.getElementById('errorContainer');
            const errorMessage = document.getElementById('errorMessage');

            // Event listener untuk area upload
            uploadArea.addEventListener('click', function() {
                fileInput.click();
            });
            
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#ff6b6b';
                uploadArea.style.background = 'rgba(255, 255, 255, 0.1)';
            });
            
            uploadArea.addEventListener('dragleave', function() {
                uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.5)';
                uploadArea.style.background = 'transparent';
            });
            
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.5)';
                uploadArea.style.background = 'transparent';
                
                if (e.dataTransfer.files.length) {
                    handleFile(e.dataTransfer.files[0]);
                }
            });
            
            // Event listener untuk input file
            fileInput.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    handleFile(this.files[0]);
                }
            });
            
            // Fungsi untuk menangani file yang diunggah
            function handleFile(file) {
                if (file.type.match('image.*')) {
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        previewImage.src = e.target.result;
                        previewContainer.classList.remove('hidden');
                        solveBtn.disabled = false;
                        
                        // Reset state
                        solutionResult.classList.add('hidden');
                        errorContainer.classList.add('hidden');
                        stepsContainer.classList.remove('hidden');
                    };
                    
                    reader.readAsDataURL(file);
                } else {
                    showError('Silakan unggah file gambar (JPG, PNG, GIF)');
                }
            }
            
            // Event listener untuk tombol solve
            solveBtn.addEventListener('click', function() {
                // Tampilkan loading
                loading.classList.remove('hidden');
                stepsContainer.classList.add('hidden');
                solutionResult.classList.add('hidden');
                errorContainer.classList.add('hidden');
                
                // Dapatkan base64 image
                const imageData = previewImage.src;
                
                // Kirim gambar ke backend API
                fetch('/api/solve-blockblast', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        image: imageData
                    })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // Sembunyikan loading
                    loading.classList.add('hidden');
                    
                    if (data.success) {
                        // Tampilkan solusi
                        displaySolution(data.steps);
                    } else {
                        showError(data.message || 'Gagal memproses gambar');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    loading.classList.add('hidden');
                    showError('Terjadi kesalahan saat memproses gambar: ' + error.message);
                });
            });

            function displaySolution(steps) {
                // Update setiap step dengan data dari backend
                steps.forEach(step => {
                    const stepElement = document.getElementById(`step${step.step}`);
                    const stepImage = document.getElementById(`step${step.step}Image`);
                    const stepDesc = document.getElementById(`step${step.step}Desc`);
                    
                    if (stepElement && stepImage && stepDesc) {
                        stepImage.src = step.image;
                        stepDesc.textContent = step.description;
                    }
                });
                
                solutionResult.classList.remove('hidden');
                
                // Scroll ke hasil solusi
                solutionResult.scrollIntoView({ behavior: 'smooth' });
            }

            function showError(message) {
                errorMessage.textContent = message;
                errorContainer.classList.remove('hidden');
                solutionResult.classList.add('hidden');
            }
        });
    </script>
</body>
</html>
